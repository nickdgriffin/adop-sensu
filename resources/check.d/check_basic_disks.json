{
  "checks": {
    "check_basic_disks": {
      "command": "/opt/sensu/embedded/bin/check-disk-usage.rb -w 75 -c 90 -x nfs -i /boot,/dev/shm,/etc/resolv.conf,/etc/hostname,/etc/hosts -p '/host/fs/(var/lib/docker|proc)/.*'",
      "handlers": [
        "mailer"
      ],
      "subscribers": [
        "basic"
      ],
      "interval": 60
    }
  }
}
